<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_30sdp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/cel_top_test" />

        <TextView
            android:id="@+id/title"
            android:layout_gravity="center"
            android:text="Resultados del escaneo completo de tu equipo"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/screenDisplay"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/screenCard"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/pantalla_01"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/screenTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pantalla"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/screenText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/storageDisplay"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/storageCard"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/hdd_02"/>

                <TextView
                    android:id="@+id/storageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Almacenamiento"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/storageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="31GB de 64GB"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/memoryDisplay"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/memoryCard"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/memoria_05"/>

                <TextView
                    android:id="@+id/memoryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Memoria"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/memoryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/batteryDisplay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bateryCard"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bateria_02"/>

                <TextView
                    android:id="@+id/bateryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bateria"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/bateryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="75%"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cpuDisplay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cpuCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/cpu_04"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/cpuTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CPU"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/cpuText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/signalDisplay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/signalCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/datos_06"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/signalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Red"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/signalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="55MB"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>