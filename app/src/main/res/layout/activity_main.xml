            <TextView
                android:id="@+id/screenTactilText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Falta checkeo"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/grey"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
