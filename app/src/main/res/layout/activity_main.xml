<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/cel_top_test" />

        <TextView
            android:id="@+id/title"
            android:layout_gravity="center"
            android:text="Resultados del escaneo completo de tu equipo"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp"
        android:orientation="horizontal"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/screenDisplay"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/screenCard"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/pantalla_01"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/screenTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pantalla"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/screenText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Falta checkeo"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/storageDisplay"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/storageCard"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/hdd_02"/>

                <TextView
                    android:id="@+id/storageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Almacenamiento"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/storageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Falta checkeo"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/sensorsDisplay"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/sensorsCard"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/memoria_05"/>

                <TextView
                    android:id="@+id/sensorsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sensores"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/sensorsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Falta checkeo"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/hardwareDisplay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hardwareCard"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/cpu_04"/>

                <TextView
                    android:id="@+id/hardwareTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hardware"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/hardwareText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Falta checkeo"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey"/>

            </LinearLayout>

            <LinearLayout
