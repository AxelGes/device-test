                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/datos_06"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/soundTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sonido"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/soundText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Falta checkeo"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/signalDisplay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/signalCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/datos_06"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/signalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conectividad"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/signalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Falta checkeo"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/grey"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/startTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar prueba completa"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_gravity="center"
        android:background="@color/light_blue"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/groupPantallaTitle"
